<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0sp"
        android:theme="@style/Theme.ImageGeneratorAIYMGAI.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            app:titleTextColor="@color/black"
            app:popupTheme="@style/Theme.ImageGeneratorAIYMGAI.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:paddingEnd="70sp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btnPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pro"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounder_corner"
                    android:layout_marginEnd="10sp"
                    android:paddingHorizontal="8sp"
                    android:paddingVertical="3sp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/crown_24"
                    app:drawableTint="@color/white" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
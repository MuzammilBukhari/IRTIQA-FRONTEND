<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.PrimeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Theme.ImageGeneratorAIYMGAI.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_baseline_close"
            app:popupTheme="@style/Theme.ImageGeneratorAIYMGAI.PopupOverlay"
            app:title="@string/app_name"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/animation_view"
            app:lottie_rawRes="@raw/all"
            app:lottie_autoPlay="true"
            android:layout_centerInParent="true"
            app:lottie_loop="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download HD Quality images upto 1024px"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/regular"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/baseline_check_24"
                android:drawableTint="@color/colorAccent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lifetime ad-free experience inside the app"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/regular"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/baseline_check_24"
                android:drawableTint="@color/colorAccent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy us a coffee and support us."
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/regular"
                android:layout_margin="10dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/baseline_check_24"
                android:drawableTint="@color/colorAccent"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/buyPremium"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Buy Premium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/rounder_corner"
            app:fontFamily="@font/regular"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/restorePurchase"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Restore Purchase"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:background="@drawable/rounder_corner"
            android:backgroundTint="#E8CBFF"
            app:fontFamily="@font/regular"
            android:layout_margin="10dp"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>